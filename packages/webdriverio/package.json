{
  "name": "@serenity-js/webdriverio",
  "version": "2.29.9",
  "description": "Serenity/JS reporter and Screenplay Pattern library for WebdriverIO",
  "author": {
    "name": "Jan Molak",
    "email": "jan.molak@smartcodeltd.co.uk",
    "url": "https://janmolak.com"
  },
  "funding": {
    "url": "https://github.com/sponsors/serenity-js"
  },
  "homepage": "https://serenity-js.org",
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "keywords": [
    "serenity-js",
    "ui",
    "frontend",
    "bdd",
    "tdd",
    "test",
    "testing",
    "wdio",
    "wdio-reporter"
  ],
  "scripts": {
    "clean": "rimraf .nyc_output lib target",
    "lint": "eslint --ext ts --config ../../.eslintrc.js .",
    "lint:fix": "npm run lint -- --fix",
    "test": "npm run test:mocha && npm run test:wdio",
    "test:mocha": "nyc --report-dir ../../target/coverage/webdriverio/mocha mocha --config ../../.mocharc.yml 'spec/adapter/**/*.spec.*'",
    "test:wdio": "cross-env PORT=8080 start-server-and-test test:wdio:start-server http://localhost:8080 test:wdio:run",
    "test:wdio:start-server": "static-content-server",
    "test:wdio:run": "nyc --report-dir ../../target/coverage/webdriverio/wdio wdio ./spec/wdio.conf.ts",
    "wdio": "wdio ./spec/wdio.conf.ts",
    "compile": "tsc --project tsconfig.json",
    "site": "esdoc -c .esdoc.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/serenity-js/serenity-js.git"
  },
  "bugs": {
    "url": "https://github.com/serenity-js/serenity-js/issues"
  },
  "engines": {
    "node": "^12 || ^14 || ^16",
    "npm": "^6 || ^7"
  },
  "dependencies": {
    "@serenity-js/core": "2.29.9",
    "@wdio/types": "^7.8.0",
    "@wdio/reporter": "^7.9.0",
    "deepmerge": "^4.2.2",
    "is-plain-object": "^5.0.0",
    "tiny-types": "^1.16.1"
  },
  "peerDependencies": {
    "@serenity-js/cucumber": "^2.29.0",
    "@serenity-js/jasmine": "^2.29.0",
    "@serenity-js/mocha": "^2.29.0",
    "@wdio/cli": "^7.9.0"
  },
  "peerDependenciesMeta": {
    "@serenity-js/cucumber": {
      "optional": true
    },
    "@serenity-js/jasmine": {
      "optional": true
    },
    "@serenity-js/mocha": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/mocha": "^8.2.2",
    "@documentation/esdoc-template": "2.0.0",
    "@integration/testing-tools": "2.0.0",
    "@integration/web-testing-tools": "2.0.0",
    "@serenity-js/assertions": "2.29.9",
    "@serenity-js/console-reporter": "2.29.9",
    "@serenity-js/cucumber": "2.29.9",
    "@serenity-js/mocha": "2.29.9",
    "@serenity-js/jasmine": "2.29.9",
    "@serenity-js/rest": "2.29.9",
    "@wdio/cli": "^7.9.0",
    "@wdio/local-runner": "^7.9.0",
    "@wdio/devtools-service": "^7.9.0",
    "@wdio/mocha-framework": "^7.9.0",
    "@wdio/spec-reporter": "^7.9.0",
    "@wdio/dot-reporter": "^7.9.0",
    "axios": "^0.21.1",
    "cross-env": "^7.0.3",
    "mocha": "^8.4.0",
    "mocha-testdata": "^1.2.0",
    "start-server-and-test": "^1.12.5",
    "webdriverio": "^7.9.0"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.d.ts",
      "lib",
      "node_modules",
      "spec"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
    ],
    "reporter": [
      "json"
    ],
    "cache": true,
    "all": false
  }
}
